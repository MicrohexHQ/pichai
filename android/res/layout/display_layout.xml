        <include layout="@layout/pins"/>
    </LinearLayout>
    <include layout="@layout/horizontal_divider"/>
    <LinearLayout style="@style/keyboard_row" android:id="@+id/portD">
        <include layout="@layout/pins"/>
    </LinearLayout>
    <include layout="@layout/horizontal_divider"/>
    <LinearLayout style="@style/keyboard_row" android:id="@+id/portE">
        <include layout="@layout/pins"/>
    </LinearLayout>
    <include layout="@layout/horizontal_divider"/>
    <LinearLayout style="@style/keyboard_row" android:id="@+id/portF">
        <include layout="@layout/pins"/>
    </LinearLayout>
</LinearLayout>
